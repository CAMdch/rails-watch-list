<div class="home-banner">
    <h1>Watch List</h1>
    <%= link_to "Add a list", new_list_path, class: 'button'%>
    <%= link_to "See all movies", movies_path, class: 'button'%>
</div>

<div class="containerPerso">
  <h2>My list</h2>
  <div class="row">
    <% @lists.each do |list|%>
      <%= link_to list_path(list.id) do%>
        <div class="col-3">
          <div class="card-list">
            <%= list.name %>
          </div>
        </div>
      <% end %>
    <%end%>
  </div>
</div>
