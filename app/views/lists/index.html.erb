<div class="home-banner">
    <h1>Watch List</h1>
    <%= link_to "Add a list", new_list_path, class: 'button-list'%>
    <%= link_to "See all movies", movies_path, class: 'button-list'%>
</div>

<div class="containerPerso">
  <h2>My list</h2>
  <div class="row">
    <% @lists.each do |list|%>
      <%= link_to list_path(list.id), class:'pink-none-decoration' do%>
        <div class="col-3">
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('https://images.unsplash.com/photo-1549317336-206569e8475c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80') %>)">
            <div class="list-title">
              <%= list.name %>
            </div>

            <div class="icon">
              <%= link_to list_path(list), class:'none-decoration', method: :delete do%>
                <i class="fa-solid fa-trash-can" id= "trash"></i>
              <%end%>
              <%= link_to edit_list_path(list) do%>
                <i class="fa-solid fa-pen"></i>
              <%end%>
            </div>
          </div>
        </div>
      <% end %>
    <%end%>
  </div>
</div>
